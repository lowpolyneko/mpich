# performance tests are performed for (senddev, recvdev) \in {host, device}^2
# host->host always runs on non-gpu targets

# latency tests
p2p_latency 2 arg=-senddev=host arg=-recvdev=host resultTest=TestBench
p2p_latency 2 arg=-senddev=host arg=-recvdev=device gpu=cuda resultTest=TestBench
p2p_latency 2 arg=-senddev=device arg=-recvdev=host gpu=cuda resultTest=TestBench
p2p_latency 2 arg=-senddev=device arg=-recvdev=device gpu=cuda resultTest=TestBench

# bw tests
p2p_bw 2 arg=-senddev=host arg=-recvdev=host resultTest=TestBench
p2p_bw 2 arg=-senddev=host arg=-recvdev=device gpu=cuda resultTest=TestBench
p2p_bw 2 arg=-senddev=device arg=-recvdev=host gpu=cuda resultTest=TestBench
p2p_bw 2 arg=-senddev=device arg=-recvdev=device gpu=cuda resultTest=TestBench
